@model IEnumerable<Department>
@{
    ViewData["Title"] = "All Departments";
}
@if (TempData["Message"] is not null)
{
    <div id="MessageDiv" class="alert alert-success">
        @TempData["Message"]
    </div>
}
<a asp-action="Create" class="btn btn-success">Crate new department</a>
<br />
@if (Model.Count() > 0)
{
    <h1>All Departments</h1>
    <br/>
   
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D=>D.Code)</td>
                <td>@Html.DisplayNameFor(D => D.Name)</td>
                <td>@Html.DisplayNameFor(D => D.DateOfCration)</td>
                <td>Details</td>
                <td>Update</td>
                <td>delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var department in Model)
                {
                    <tr>

                    <td> @department.Code</td>
                    <td> @department.Name</td>
                    <td> @department.DateOfCration</td>
                    

                    <partial name="_ButtonsPartialView" model="@department.Id"/>



                    </tr>
                }
            
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning"> there is no departments</div>
}

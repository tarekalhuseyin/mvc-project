@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div asp-validation-summary="All" class="text-danger"></div>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login">
			
			<input class="text" asp-for="Email" placeholder="Your Email">
			<span asp-validation-for="Email" class="text-danger"></span>
			<br />
			<input class="text" asp-for="Password" placeholder="Your Password">
			<span asp-validation-for="Password" class="text-danger"></span>
			<br />
			
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RemeberMe" class="checkbox">
					<span>Remember me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>Do not  have an Account? <a asp-action="Register"> Sign up Now!</a></p>
	</div>
</div>
@section ValidationScriptSection
{
	<partial name="_ValidationScriptsPartial" />
}
